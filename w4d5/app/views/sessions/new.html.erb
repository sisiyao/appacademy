<h2>Login to Reddit!</h2>

<%= link_to "Create account", new_user_url %>

<br/><br/>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>
  <label>
    Email:
    <input type="text" name="user[email]">
  </label>

  <label>
    Password:
    <input type="password" name="user[password]">
  </label>

  <input type="submit" value="Login!">
</form>
