<h2>Sign up for Reddit!</h2>

<%= link_to "Login", new_session_url %>

<br/><br/>

<form action="<%= users_url %>" method="post">
  <%= auth_token %>
  <label>
    Email:
    <input type="text" name="user[email]">
  </label>

  <label>
    Create a password:
    <input type="password" name="user[password]">
  </label>

  <input type="submit" value="Create user">
</form>
